.name_idcard {
  padding-left: 56rpx;
  margin-bottom: 21rpx;
  font-size: 32rpx;
  background-color: #fff;
}

.name_idcard view {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 106rpx;
  padding-right: 32rpx;
}

.label{
  width: 30%;
}

.name_idcard view input {
  text-align: right;
}

.name_idcard .name {
  border-bottom: 1rpx solid #e6e6e6;
}

.updata_img {
  width: 413rpx;
  height: 260rpx;
  margin: 15rpx auto 0;
}

.updata_img:last-of-type {
  margin-bottom: 82rpx;
}

.updata_img image {
  width: 100%;
  height: 100%;
}

.pt{
  font-size:28rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(168,168,168,1);
  width: 85%;
  margin: 0 auto;
  padding-bottom: 10rpx;
}